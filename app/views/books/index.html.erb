<%= render "shared/header" %> 
<div class='main'>

  <div class='title-contents'>
    <h1 class='service-title'>
      ブックイックで本の内容と感想を共有
    </h1>
    <p class='service-explain'>
      失敗しない本選び
    </P>
    <p class='service-explain'>
      効率的に学びたい方のためのアプリです
    </P>
  </div>

  <div class='book-contents'>
    <h2 class='title'>-投稿書籍一覧-</h2>
    <ul class='book-lists'>
      <li class='list'>
        <% @books.each do |book| %>
          <%= link_to '#' do %>
          <div class='book-image-content'>
          <%= image_tag book.image, class: "book-image" %>
          </div>
          <div class='book-info'>
            <p class='book-title'>
              <%= "書籍名：#{book.title}" %>
            </p>
              <div class='book-author'>
                <p>著者：<% book.authors.each do |author|  %>
                    <%= author.name %>
                <% end %></p>
              </div>
              <div class='book-story'>
                <%= "あらすじ：#{book.story}" %>
              </div>
              <div class="user-name">
              <%= "投稿者：#{book.user.name}"%>
              </div>
          </div>

          </div>
          <% end %>

         <% end %>
    </ul>
  </div>
</div>
<%= link_to( new_book_path, class: 'purchase-btn') do %>
  <%= image_tag 'icon-pen.jpg' , size: '75x75' ,class: "purchase-btn-icon" %>
  <span class='purchase-btn-text'>投稿する</span>
<% end %>
<%= render "shared/footer" %>